{
	"name": "JupyterLab Light",
	"colors": {
		"editor.background": "#fffeff",
		"editor.foreground": "#212121",
        "list.activeSelectionIconForeground": "#fff",
// Activity Bar
		"activityBar.background": "#eeeeee",
		"activityBar.foreground": "#606060",
		"activityBar.inactiveForeground": "#606060",
		"activityBar.activeBorder": "#f37626",
		"activityBar.activeBackground": "#fffeff",
		"activityBar.activeFocusBorder": "#bdbdbd",
		"button.background": "#2096f3",
// Brackets
		"editorBracketHighlight.foreground1": "#212121",
		"editorBracketHighlight.foreground2": "#212121",
		"editorBracketHighlight.foreground3": "#212121",
		"editorBracketHighlight.foreground4": "#212121",
		"editorBracketHighlight.foreground5": "#212121",
		"editorBracketHighlight.foreground6": "#212121",
		"editorBracketPairGuide.activeBackground1": "#212121",
		"editorBracketPairGuide.activeBackground2": "#212121",
		"editorBracketPairGuide.activeBackground3": "#212121",
		"editorBracketPairGuide.activeBackground4": "#212121",
		"editorBracketPairGuide.activeBackground5": "#212121",
		"editorBracketPairGuide.activeBackground6": "#212121",
		"editorBracketPairGuide.background1": "#212121",
		"editorBracketPairGuide.background2": "#212121",
		"editorBracketPairGuide.background3": "#212121",
		"editorBracketPairGuide.background4": "#212121",
		"editorBracketPairGuide.background5": "#212121",
		"editorBracketPairGuide.background6": "#212121",
// Editor Colors
		"editorLineNumber.foreground": "#999999",
// Notebook
		"notebook.selectedCellBackground": "#fffeff",  // not working as expected
// Status Bar
		"statusBar.background": "#eeeeee",
		"statusBar.foreground": "#282929",
		// "statusBar.border": "#bababa",
		"statusBar.debuggingBackground": "#f37626",
		"statusBar.debuggingForeground": "#fffeff",
		"statusBarItem.activeBackground": "#b3b3b3",
		"statusBarItem.hoverBackground": "#b3b3b3",
		"statusBar.noFolderBackground": "#2096f3",
		"statusBar.noFolderForeground": "#fffeff",
	},
	"tokenColors": [
// Python
		{
			"name": "Python: Strings",
			"scope": [
				// "string",
				"string.quoted.docstring.multi.python",
				"string.quoted.docstring.single.python",
				"string.quoted.multi.python",
				"string.quoted.single.python",
				"storage.type.string.python",
				"string.regexp.quoted.single.python",
				"string.regexp.quoted.multi.python",
			],
			"settings": {
				"foreground": "#ba2223"
			}
		},
		{
			"name": "Python: Numeric",
			"scope": [
				// "constant",
				// "constant.numeric",
				// "constant.character",
				"constant.numeric.float.python",
				"constant.numeric.dec.python",
				"storage.type.imaginary.number.python",
			],
			"settings": {
				"foreground": "#007f01"
			}
		},
		{
			"name": "Python: Operators",
			"scope": [
				// "keyword.operator",
				"keyword.operator.arithmetic.python",
				"keyword.operator.bitwise.python",
				"keyword.operator.comparison.python",
				"keyword.operator.assignment.python",
				"keyword.operator.unpacking.parameter.python",
				"keyword.operator.unpacking.arguments.python",
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#a922ff"
			}
		},
		{
			"name": "Python: Comments",
			"scope": [
				"punctuation.definition.comment.python",
				"comment.line.number-sign.python"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#407f7f"
			}
		},
		{
			"name": "Python: Support Types and Builtin Functions",
			"scope": [
				"support.type.python",
				"support.function.builtin.python",
				"meta.indexed-name.python",
			],
			"settings": {
				"foreground": "#007f01"
			}
		},
		{
			"name": "Python: Punctuation Annotation Separator",
			"scope": [
				"punctuation.separator.annotation.result.python",
				"invalid.illegal.annotation.python",
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#a922ff"
			}
		},
		{
			"name": "Python: Constants, Keywords, Functions, and Classes",
			"scope": [
				"constant.language.python",
				"storage.type.function.python",
				"storage.type.class.python",
				"keyword.control.flow.python",
				"keyword.control.import.python",
				"keyword.operator.logical.python",
				"storage.type.function.lambda.python",

			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#007f01"
			}
		},
		{
			"name": "Python: Entities and Support Functions",
			"scope": [
				"entity.name.type.class.python",
				"entity.name.function.python",
				"support.function.magic.python",
			],
			"settings": {
				"foreground": "#1400ff"
			}
		},			
		{
			"name": "Python: Self Variable & Parameter and Meta",
			"scope": [
				"variable.parameter.function.language.special.self.python",
				"variable.parameter.function.language.special.cls.python",
				"variable.language.special.self.python",
				"meta.attribute.python",
				"meta.function-call.generic.python",
			],
			"settings": {
				"foreground": "#0055a9"
			}
		},
		{
			"name": "Python: Decorators",
			"scope": [
				"entity.name.function.decorator.python",
				"meta.function.decorator.python",  // overruled by support.type.python
			],
			"settings": {
				"foreground": "#a922ff"
			}
		},
// Markup
		{
			"name": "Markup: Heading",
			"scope": "markup.heading",
			"settings": {
				"fontStyle": "bold",
				"foreground": "#1400ff"
			}
		},
		{
			"name": "Markup Inline",
			"scope": "markup.inline.raw",
			"settings": {
				"foreground": "#498040"
			}
		},
		{
			"name": "Markup: Link",
			"scope": "meta.link",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "Markup: Strong",
			"scope": [
				"markup.bold",
				"markup.bold.markdown"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#212121"
			}
		},
		{
			"name": "Markup: Emphasis",
			"scope": [
				"markup.italic",
				"markup.italic.markdown"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#212121"
			}
		},
		{
			"name": "Markup Quote",
			"scope": "markup.quote",
			"settings": {
				"foreground": "#009900"
			}
		},
		{
			"name": "Markup Lists",
			"scope": "markup.list",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "Markup: Traceback",
			"scope": "markup.traceback",
			"settings": {
				"foreground": "#ba2223"
			}
		},
	]
}